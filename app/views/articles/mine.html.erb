<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
</head>
<body>

  	<%= render "navbar" %>

  	<div class="my-articles">
	  	<div class="public column">
  			<% articles = @articles.select { |article| article.status == 'public' } %>
  			<h2>Public - <%= articles.size %></h2>
  			<ul>
			  	<% articles.each do |article| %>
  			  		<li>
  			  			<%= link_to article.title, article %>
  			  		</li>
				<% end %>
  			</ul>
		</div>

		<div class="private column">
  			<% articles = @articles.select { |article| article.status == 'private' } %>
  			<h2>Private - <%= articles.size %></h2>
  			<ul>
			  	<% articles.each do |article| %>
  			  		<li>
  			  			<%= link_to article.title, article %>
  			  		</li>
				<% end %>
  			</ul>
		</div>

		<div class="archieved column">
  			<% articles = @articles.select { |article| article.status == 'archieved' } %>
  			<h2>Archieved - <%= articles.size %></h2>
  			<ul>
			  	<% articles.each do |article| %>
  			  		<li>
  			  			<%= link_to article.title, article %>
  			  		</li>
				<% end %>
  			</ul>
		</div>
  	</div>

</body>
</html>