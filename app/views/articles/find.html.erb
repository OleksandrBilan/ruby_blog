<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
</head>
<body>

  <%= render "articles/navbar" %>

  <div class='article-info'>
  <div class='find'>
    <form action="/find">
      <label for="q">Find articles by title:</label>
      <input type="text" name="q">
      <button type="submit">Find</button>
    </form>
  </div>

  <p>Found <%= @articles.size %> articles:</p>

  <ul>
    <% @articles.select { |article| article.status == "public" }.each do |article| %>
        <li>
          <%= article.author_nickname %>: <%= link_to article.title, article %>
        </li>
    <% end %>
  </ul>
  </div>

</body>
</html>