<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
</head>
<body>

  	<%= render "articles/navbar" %>

  	<div class='article-info'>
  	  	<%= render "find_by_title_div" %>

  	  	<%= render "filter_by_categories_div" %>

  	  	<h1><%= Article.public_count %> Articles</h1>

  	  	<ul>
  	  	  	<% @articles.select { |article| article.status == "public" }.each do |article| %>
  	  	  	    <li>
  	  	  	      	<%= article.author_nickname %>: <%= link_to article.title, article %> - <%= article.category %>
  	  	  	    </li>
  	  	  	<% end %>
  	  	</ul>
  	</div>

  	<%= will_paginate @articles, renderer: BootstrapPagination::Rails, previous_label: '<= Previous Page', next_label: 'Next Page =>' %>

</body>
</html>